{
  "name": "voice-transcription-mvp-root",
  "version": "1.0.0",
  "description": "Voice transcription MVP with real-time translation",
  "private": true, 
  "workspaces": [ 
    "client",
    "server"
  ],
  "scripts": {
    "start:server": "npm start --workspace=server",
    "start:server:prod": "npm run start:prod --workspace=server", 
    "build:client": "npm run build --workspace=client", 
    "build": "npm run build:client", 

    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"", 
    "test": "npm test --workspaces --if-present" 
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}